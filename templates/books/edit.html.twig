{% extends 'base.html.twig' %}

{% block title %}Edit Book{% endblock %}

{% block body %}

	<div class="container">
		<br><br>
		<h2 class="col-12">Edit Book</h2>
		<br>
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
			<div class="card">
				<div class="card-body">
					{{ form_start(editForm) }}

					<div class="form-group">
						{{ form_label(editForm.title) }}
						<br>
						{{ form_widget(editForm.title) }}
					</div>

					<div class="form-group">
						{{ form_label(editForm.publish_year) }}
						<br>
						{{ form_widget(editForm.publish_year) }}
					</div>

					<div class="form-group">
						{{ form_label(editForm.author) }}
						<br>
						{{ form_widget(editForm.author) }}
					</div>
					<br>

					{#Кнопка#}
					{{ form_widget(editForm.save, {'label':'Update', 'attr':{'class':'col-3 btn btn-lg btn-block btn-outline-success'}}) }}

					{{ form_end(editForm) }}
				</div>
			</div>

		</div>

	</div>
{% endblock %}