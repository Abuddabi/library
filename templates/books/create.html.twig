{% extends 'base.html.twig' %}

{% block title %}Create Book{% endblock %}

{% block body %}

	<div class="container">
		<br><br>
		<h2 class="col-12">Create Book</h2>
		<br>
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
			<div class="card">
				<div class="card-body">
					{{ form_start(createForm) }}

						<div class="form-group">
							{{ form_label(createForm.title) }}
							<br>
							{{ form_widget(createForm.title) }}
						</div>

						<div class="form-group">
							{{ form_label(createForm.publish_year) }}
							<br>
							{{ form_widget(createForm.publish_year) }}
						</div>

						<div class="form-group">
							{{ form_label(createForm.author) }}
							<br>
							{{ form_widget(createForm.author) }}
						</div>
						<br>

						{#Кнопка#}
						{{ form_widget(createForm.save, {'attr':{'class':'col-3 btn btn-lg btn-block btn-outline-success'}}) }}

					{{ form_end(createForm) }}
				</div>
			</div>

		</div>

	</div>
{% endblock %}
